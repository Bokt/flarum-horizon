{
    "name": "bokt/flarum-horizon",
    "description": "Adds Laravel Horizon to Flarum",
    "keywords": [
        "extension",
        "flarum", "bokt",
        "queue", "horizon"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "http://luceos.com"
        }
    ],
    "support": {
        "issues": "https://github.com/bokt/flarum-queue/issues",
        "source": "https://github.com/bokt/flarum-queue"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.9",
        "bokt/flarum-queue": "*",
        "laravel/horizon": "*"
    },
    "autoload": {
        "psr-4": {
            "Bokt\\Horizon\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Horizon",
            "icon": {
                "image": "https://raw.githubusercontent.com/laravel/horizon/2.0/resources/img/horizon.svg",
                "backgroundColor": "#EBF1FD",
                "color": "#3a98d0",
                "backgroundSize": "90%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        }
    }
}
