{
    "name": "blomstra/horizon",
    "description": "Adds Laravel Horizon to Flarum",
    "keywords": [
        "extension",
        "flarum", "blomstra",
        "queue", "horizon"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "DaniÃ«l Klabbers",
            "email": "daniel@klabbers.email",
            "homepage": "http://luceos.com"
        }
    ],
    "support": {
        "issues": "https://github.com/blomstra/flarum-ext-horizon/issues",
        "source": "https://github.com/blomstra/flarum-ext-horizon"
    },
    "require": {
        "flarum/core": "^1.0.0",
        "laravel/horizon": "*",
        "blomstra/flarum-redis": "*",
        "vlucas/phpdotenv": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Blomstra\\Horizon\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Horizon",
            "icon": {
                "image": "resources/logo.svg",
                "backgroundColor": "#EBF1FD",
                "color": "#3a98d0",
                "backgroundSize": "90%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        }
    }
}
